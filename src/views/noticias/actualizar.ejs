<%- include('../archivos/cabecera', { usuario: usuario }) %> 

<section class="become_a_instructor">
  <div class="col-sm-10 col-md-4 col-lg-4" style="margin: 0 auto">
    <!-- TODO: SERÍA CONVENIENTE CAMBIARLE LOS NOMBRES A LAS CLASES -->
    <div class="apply_instructor">
        <div class="form_title">
            <h3>Actualizar noticia</h3>
        </div>
        <form action="" method="POST">
            <div class="row">
                <div class="col-12 col-lg-12 col-md-12 col-lg-12">
                    <div class="form-group">
                        <label class="control-label">Título de la noticia</label>
                        <input type="text" class="form-control" placeholder="" name="tituloNoticia" id="tituloNoticia" value="<%= noticia.tituloNoticia %>"">
                    </div>
                </div>                            
                <div class="col-12 col-lg-12 col-md-12 col-lg-12">
                    <div class="form-group">
                        <label class="control-label">Contenido de la noticia</label>
                        <textarea class="form-control" name="cuerpoNoticia" id="cuerpoNoticia" placeholder=""><%= noticia.cuerpoNoticia %></textarea> 
                    </div>
                </div>
                <div class="col-12 col-lg-12 col-md-12 col-lg-12">
                    <button type="submit" class="btn btn-default submit_btn">Actualizar</button>
                </div> 
            </div>
        </form>
    </div>
  </div>

</section>


