<%- include('../archivos/cabecera', { usuario: usuario }) %> 

<section class="become_a_instructor">
  <div class="col-sm-10 col-md-4 col-lg-4" style="margin: 0 auto">
    <!-- TODO: SERÍA CONVENIENTE CAMBIARLE LOS NOMBRES A LAS CLASES -->
    <div class="apply_instructor">
        <div class="form_title">
            <h3>Actualizar carrera ID: <%= datos.id %></h3>
        </div>
        <form action="/carreras/<%= datos.id %>/actualizar" method="POST">
            <div class="row">
                <div class="col-12 col-lg-12 col-md-12 col-lg-12">
                    <div class="form-group">
                        <label class="control-label">Nombre de la carrera</label>
                        <input type="text" class="form-control"  placeholder="" name="nombre" id="nombre" value="<%= datos.nombre %>">
                    </div>
                </div>                            
                <div class="col-12 col-lg-12 col-md-12 col-lg-12">
                    <div class="form-group">
                        <label class="control-label">Nombre abreviado</label>
                        <input type="text" class="form-control"  placeholder="" name="nombreAbreviado" id="nombreAbreviado" value="<%= datos.nombreAbreviado %>">
                    </div>
                </div>                            
                <div class="col-12 col-lg-12 col-md-12 col-lg-12">
                    <div class="form-group">
                        <label class="control-label">Título</label>
                        <input type="text" class="form-control"  placeholder="" name="titulo" id="titulo" value="<%= datos.titulo %>">
                    </div>
                </div>                            
                <div class="col-12 col-lg-12 col-md-12 col-lg-12">
                    <div class="form-group">
                        <label class="control-label">Resolución</label>
                        <input type="text" class="form-control"  placeholder="" name="resolucion" id="resolucion" value="<%= datos.resolucion %>">
                    </div>
                </div>                            
                <div class="col-12 col-lg-12 col-md-12 col-lg-12">
                  <div class="form-group">
                    <label for="duracion">Duración</label>
                    <select class="form-control" name="duracion" id="duracion">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                    </select>
                  </div>
                </div>                            
                <div class="col-12 col-lg-12 col-md-12 col-lg-12">
                    <div class="form-group">
                        <label class="control-label">Horas</label>
                        <input type="text" class="form-control"  placeholder="" name="horas" id="horas" value="<%= datos.horas %>">
                    </div>
                </div>                            
                <div class="col-12 col-lg-12 col-md-12 col-lg-12">
                  <div class="form-group">
                    <label for="tipo">Tipo</label>
                    <select class="form-control" name="tipo" id="tipo">
                        <option>Carrera vigente</option>
                        <option>Carrera a ciclo cerrado</option>
                    </select>
                  </div>
                </div>                            
                <div class="col-12 col-lg-12 col-md-12 col-lg-12">
                  <div class="form-group">
                    <label for="modalidad">Modalidad</label>
                    <select class="form-control" name="modalidad" id="modalidad">
                        <option>Presencial</option>
                        <option>Virtual</option>
                    </select>
                  </div>
                </div>       
                <div class="col-12 col-lg-12 col-md-12 col-lg-12">
                    <button type="submit" class="btn btn-default submit_btn">Actualizar</button>
                </div> 
            </div>
        </form>
    </div>
  </div>

</section>

<%- include('../archivos/footer') %> 